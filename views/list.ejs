<%- include('header') -%>

    <div class="box" id="heading">
        <h1><%= kindOfTask %></h1>
    </div>

    <div class="box">
        <%newListItems.forEach(obj => { %>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= obj.name %>" >
                <p><%= obj.name %></p>
            <input type="hidden" value="<%= kindOfTask %>" name="hiddenName"></input>
            </div>
            </form>
        <% }) %>

        <form action="/" class="item" method="post">
            <input type="text" name="newItem" id="" autocomplete="off" placeholder="New Item">
            <button type="submit" name="button" value="<%= kindOfTask %>">+</button>
        </form>
    </div>
    <%- include('footer') -%>
    
